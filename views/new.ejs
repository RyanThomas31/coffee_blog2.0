
<? include ./partials/header ?>

<div class="ui main text container segment" style="background-color: rgba(0, 0, 0, 0.548)">
  <div class="ui black huge header">
    New Post
  </div>

  <form action="/blogs" method="POST" class="ui form">

    <div class="field">
      <input type="text" name="blog[title]" placeholder="Title" required>
    </div>
    <div class="field">
      <input type="text" name="blog[imageUrl]" placeholder="Image URL" required>
    </div>
    <div class="field">
      <textarea id="summernote" name="blog[body]" placeholder="Post Content" required></textarea>
    </div>

    <button class="ui green icon button">
      Submit
      <i class="thumbs up icon"></i>
    </button>

    <a href="/blogs" class="ui red basic icon button">
      Cancel
      <i class="thumbs down icon"></i>
    </a>

  </form>
</div>
<script>
  $(document).ready(function() {
    $('#summernote').summernote();
  });
</script>
<? include ./partials/footer ?>
